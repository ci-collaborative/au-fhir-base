<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="patient-guidance-ihi"/>
  <url value="http://hl7.org.au/fhir/StructureDefinition/patient-guidance-ihi"/>
  <name value="PatientWithMandatoryIHI"/>
  <status value="draft"/>
  <fhirVersion value="4.0.1"/>
  <kind value="resource"/>
  <abstract value="false"/>
  <type value="Patient"/>
  <baseDefinition value="http://hl7.org.au/fhir/StructureDefinition/au-patient-guidance"/>
  <derivation value="constraint"/>
  <differential>
    <element id="Patient">
      <path value="Patient"/>
      <constraint>
        <key value="inv-pat-g-i-0"/>
        <severity value="error"/>
        <human value="One and only one identifier shall be an IHI" />
        <expression value="(identifier.($this.conformsTo('http://hl7.org.au/fhir/StructureDefinition/au-ihinumber')).count() = 1)" />
        <source value="http://hl7.org.au/fhir/StructureDefinition/patient-guidance-ihi"/>
      </constraint>
    </element>
    <element id="Patient.identifier">
      <path value="Patient.identifier"/>
      <min value="1" />
    </element>
  </differential>
</StructureDefinition>
